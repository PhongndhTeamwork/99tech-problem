{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@controller/*": ["src/controllers/*"],
      "@route/*": ["src/routes/*"],
      "@database/*": ["src/database/*"]
    }
  }
}
